<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.dianaui.universal.core.client.ui"
             xmlns:cm="urn:import:edu.stanford.bmir.gwtcodemirror.client">
    <g:SplitLayoutPanel ui:field="container">
        <g:north size="300">
            <g:DockLayoutPanel>
                <g:north size="33">
                    <b:ButtonToolBar>
                        <b:Button fontAwesomeIcon="PLAY" ui:field="runButton"/>
                    </b:ButtonToolBar>
                </g:north>
                <g:center>
                    <g:ScrollPanel>
                        <cm:GWTCodeMirror ui:field="queryEditor"/>
                    </g:ScrollPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <cm:GWTCodeMirror ui:field="appearanceEditor"/>
            </g:ScrollPanel>
        </g:center>
    </g:SplitLayoutPanel>
</ui:UiBinder>